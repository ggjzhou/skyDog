<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.skydog.dao.CollectDao">

    <resultMap id="collectMap" type="Collect">
        <id property="collectId" column="collectId"></id>
        <result property="userId" column="userId"></result>
        <result property="productId" column="productId"></result>
        <result property="collectTime" column="collectTime"></result>

        <association property="productDto" column="productId" javaType="com.example.skydog.module.dto.ProductDto"
                     resultMap="com.example.skydog.module.entity.Product.ProductDtoMap"></association>
    </resultMap>

    <!-- 添加 -->
    <insert id="add" parameterType="Collect">
        insert into tb_collect
        values (#{collectId},#{userId}, #{productId}, #{collectTime})
    </insert>

    <!-- 删除 -->
    <delete id="delete" parameterType="int">
        delete
        from tb_collect c
        where c.userId = #{uerId}
          and c.productId = #{productId}
    </delete>

    <!--    通过id查询-->
    <select id="queryId" parameterType="int">
        select *
        from tb_collect c
        where c.collectId = #{collectId}
    </select>

    <!-- 获取用户收藏 -->
    <select id="getMyCollect" parameterType="int" resultMap="collectMap">
        select u.*, c.*, p.*
        from tb_user u
                 LEFT JOIN tb_collect c ON (u.userId = c.userId)
                 LEFT JOIN tb_product p ON (u.productId = p.productId)
        where c.userId = #{userId}
    </select>

    <!-- 条件查询 -->
    <select id="queryCondition" parameterType="Collect">
        select * from tb_collect c
        <where>
            <if test="userId!=null">
                and c.userId = #{userId}
            </if>
            <if test="productId!=null">
                and c.productId = #{productId}
            </if>
            <if test="collectTime!=null">
                and c.collectTime = #{collectTime}
            </if>
        </where>
    </select>

    <!-- 批量删除 -->
    <delete id="batchDelete">
        <foreach collection="list" item="productId" separator=";">
            DELETE from tb_collect c
            where c.userId = #{userId}
            and c.productId = #{productId}
        </foreach>
    </delete>
</mapper>